{
  "name": "sales-management-api",
  "version": "1.0.0",
  "description": "MySQL backend API for Sales Management System",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "db:setup": "node scripts/setup-database.js",
    "db:seed": "node scripts/seed-mysql.js",
    "db:demo": "node scripts/setup-mysql-demo.js",
    "mysql:check": "node -e \"import('./config/database.js').then(db => db.testConnection())\""
  },
  "dependencies": {
    "better-sqlite3": "^12.2.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "mysql2": "^3.14.5",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  }
}
